    <name>vue-translation-batch-updater-intellij-plugin</name>
    <vendor>paulcombal</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.paulcombal.vuetranslationbatchupdaterintellijplugin.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
